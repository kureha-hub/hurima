<div class="edit-form-container">
  <h2>プロフィール編集</h2>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "users/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :name, "名前" %>
      <%= f.text_field :name, autofocus: true %>
    </div>

    <div class="field">
      <%= f.label :university, "大学名" %>
      <%= f.text_field :university %>
    </div>

    <div class="field">
      <%= f.label :profile, "プロフィール" %>
      <%= f.text_area :profile %>
    </div>

    <div class="field">
      <%= f.label :email, "メールアドレス" %>
      <%= f.email_field :email %>
    </div>

    <div class="field">
      <%= f.label :image, "画像" %>
      <%= f.file_field :image %>
    </div>

    <div class="field">
      <%= f.label :password, "パスワード（変更しない場合は空欄）" %>
      <%= f.password_field :password %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, "パスワード確認" %>
      <%= f.password_field :password_confirmation %>
    </div>

    <div class="field">
      <%= f.label :current_password, "現在のパスワード（確認用）" %>
      <%= f.password_field :current_password %>
    </div>

    <div class="actions">
      <%= f.submit "更新する" %>
    </div>
  <% end %>

  <div class="delete-account">
    <h3>アカウント削除</h3>
    <%= button_to "アカウントを削除する", registration_path(resource_name), method: :delete, data: { confirm: "本当に削除しますか？" } %>
  </div>
</div>
